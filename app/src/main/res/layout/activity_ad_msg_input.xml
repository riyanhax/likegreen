            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="77dp">

        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:text="是否上传商家信息"
                style="@style/admsginputtext" />
            <RadioGroup
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:textColor="#404040"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="4dp"
                    android:text="是"
                    android:checked="true"
                    android:button="@null"
                    android:drawableLeft="@drawable/bt_video_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:textColor="#404040"
                    android:layout_marginLeft="30dp"
                    android:drawablePadding="4dp"
                    android:text="否"
                    android:button="@null"
                    android:drawableLeft="@drawable/bt_video_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:text="(此信息仅限喜绿官方查看)"
                android:textColor="#cccccc"
                android:layout_gravity="center_vertical"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:background="@color/enptyviewbackground"
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <LinearLayout
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/bt_video_type"
                    android:layout_width="@dimen/dp_13"
                    android:layout_height="@dimen/dp_13" />
                <TextView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="承诺以上信息真实可靠"
                    android:textColor="#cccccc"
                    android:layout_gravity="center_vertical"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18"
                android:gravity="center"
                android:text="发布"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_alignParentBottom="true"
                android:background="@drawable/login_btn_bg"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="35dp" />
        </RelativeLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>