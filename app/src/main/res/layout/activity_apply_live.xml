<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.mian.ApplyLiveActivity">
    <RelativeLayout
        style="@style/head">
        <ImageView
            android:id="@+id/iv_return"
            android:layout_centerVertical="true"
            android:src="@drawable/wode_return"
            style="@style/paddinglift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerInParent="true"
            android:text="申请直播"
            android:textColor="@color/colorfocuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/enptyviewbackground"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
            android:id="@+id/et_goodsname"
            android:background="@null"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColorHint="#d8d8d8"
            android:hint="@string/goodsname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42" />
        <View
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@color/enptyviewbackground"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <EditText
            android:id="@+id/et_goodsdetails"
            android:background="@null"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="top"
            android:textColorHint="#d8d8d8"
            android:hint="@string/goodsdetails"

            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100" />
        <View
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="#f6f6f6"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_13"
            android:text="图片"
            android:textSize="13sp"
            android:textColor="#404040"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="140dp">
            <ImageView
                android:id="@+id/apply_live_photo_one"
                android:src="@drawable/addphotos"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/apply_live_photo_two"
                android:visibility="invisible"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/apply_live_photo_three"
                android:layout_marginLeft="@dimen/dp_5"
                android:visibility="invisible"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/dp_10"
            android:background="#f6f6f6"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_13"
            android:text="直播预告视频"
            android:textSize="13sp"
            android:textColor="#404040"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="140dp">
                <ImageView
                    android:id="@+id/apply_live_shortvideo"
                    android:src="@drawable/addvideo"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_marginLeft="@dimen/dp_5"
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_marginLeft="@dimen/dp_5"
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/dp_10"
                android:background="#f6f6f6"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:id="@+id/rl_data_picker"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:textSize="13sp"
                    android:textColor="#404040"
                    android:layout_centerVertical="true"
                    android:text="设定开播时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:src="@drawable/arrow"
                    android:layout_centerVertical="true"
                    android:layout_width="9dp"
                    android:layout_height="@dimen/dp_15" />
            </RelativeLayout>
            <View
                android:background="#f6f6f6"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <EditText
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColorHint="#d8d8d8"
                android:background="@null"
                android:hint="@string/contcats"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42" />
            <View
                android:background="#f6f6f6"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <EditText
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColorHint="#d8d8d8"
                android:background="@null"
                android:hint="@string/contcatsphone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42" />
            <View
                android:background="#f6f6f6"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:textSize="13sp"
                    android:textColor="#404040"
                    android:layout_centerVertical="true"
                    android:text="添加直播商品链接"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:src="@drawable/arrow"
                    android:layout_centerVertical="true"
                    android:layout_width="9dp"
                    android:layout_height="@dimen/dp_15" />
            </RelativeLayout>
            <View
                android:background="#f6f6f6"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:text="认证"
                    style="@style/admsginputtext" />
                <RadioGroup
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:textColor="#404040"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="4dp"
                        android:text="个人认证"
                        android:checked="true"
                        android:button="@null"
                        android:drawableLeft="@drawable/bt_video_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RadioButton
                        android:textColor="#404040"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="4dp"
                        android:text="企业认证"
                        android:button="@null"
                        android:drawableLeft="@drawable/bt_video_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
                <TextView
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="(此信息仅限喜绿官方查看)"
                    android:textColor="#cccccc"
                    android:layout_gravity="center_vertical"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="@dimen/dp_30"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/kuangkuang"
                    android:layout_width="77dp"
                    android:layout_height="77dp" />
                <TextView
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="身份证反面"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#8c8c8c"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/enptyviewbackground"
                android:layout_width="match_parent"
                android:layout_height="130dp">
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:checked="true"
                        android:background="@null"
                        android:button="@drawable/bt_video_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="承诺以上信息真实可靠"
                        android:textColor="#cccccc"
                        android:layout_gravity="center_vertical"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_18"
                    android:gravity="center"
                    android:text="@string/submission"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/login_btn_bg"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="35dp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>