<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.mine.IDCardCheckActivity">
    <RelativeLayout
        style="@style/head">
        <ImageView

            android:layout_centerVertical="true"
            android:src="@drawable/wode_return"
            style="@style/paddinglift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/iv_return"
            android:orientation="vertical"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_48"/>
        <TextView
            android:layout_centerInParent="true"
            android:text="@string/personaldata"
            android:textColor="@color/colorfocuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:background="@color/enptyviewbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/dp_20"
            android:layout_gravity="center_horizontal"
            android:textColor="#a4a4a4"
            android:text="拍摄您的第二代身份证原件，请确保四边清晰四角完整"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_previewfront"
                android:src="@drawable/zhengmian"
                android:scaleType="fitXY"
                android:layout_width="230dp"
                android:layout_height="150dp" />
            <ImageView
                android:id="@+id/iv_idcard_front"
                android:layout_centerInParent="true"
                android:src="@drawable/shangchuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="@dimen/dp_20"
            android:text="身份证正面"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_previewback"
                android:src="@drawable/beimian"
                android:scaleType="fitXY"
                android:layout_width="230dp"
                android:layout_height="150dp" />
            <ImageView
                android:id="@+id/iv_idcard_back"
                android:layout_centerInParent="true"
                android:src="@drawable/shangchuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="@dimen/dp_20"
            android:text="身份证反面"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <TextView
            android:id="@+id/tv_submission"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:gravity="center"
            android:background="@drawable/bg_plant_diary"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="提交审核"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40" />
    </RelativeLayout>
</LinearLayout>