<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/tools"
    tools:context="com.pywl.likegreen.activity.mian.LivingActivity">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_home_live"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <com.flyco.tablayout.SlidingTabLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/st_home_live"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        tl:tl_textSelectColor="#ffffff"
        tl:tl_textUnselectColor="#e7e7e7"
        tl:tl_divider_padding="5dp"
        app:tl_divider_color="@color/white"
        app:tl_divider_width="@dimen/dp_1"
        app:tl_indicator_height="0dp"
        />

    <ImageView
        android:id="@+id/live_return_back"
        android:src="@drawable/wode_return"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
