<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity">
    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/denglu_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="@dimen/dp_30"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_denglu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="HEEKGROUP"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/login_edtext_bg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/shoujihao"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_15" />
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/bg_register_edtext"
                    android:layout_marginRight="@dimen/dp_40"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/et_register_phone"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:layout_gravity="center"
                        android:hint=" 请输入手机号码"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/mima"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_15" />
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/bg_register_edtext"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/et_register_code"
                        android:inputType="number"
                        android:layout_gravity="center"
                        android:hint=" 请输入验证码"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_send_code"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:text="@string/getverificationcode"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_40"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_30" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35">
                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/mima"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_15" />
                <RelativeLayout
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/bg_register_edtext"
                    android:layout_marginRight="@dimen/dp_40"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/et_register_pwd"
                        android:inputType="textPassword"
                        android:layout_gravity="center"
                        android:hint=" 密码（至少6位数）"
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <CheckBox
                        android:id="@+id/cb_show_pwd"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/checkbox_login"
                        android:button="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_15" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_register"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:gravity="center"
            android:text="注册"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/login_btn_bg"
            android:layout_gravity="center_horizontal"
            android:layout_width="244dp"
            android:layout_height="35dp" />
        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#312828"
                android:text="注册即表示您同意"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#efe5e5"
                android:text="用户协议"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>