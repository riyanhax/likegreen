<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.pywl.likegreen.activity.ShareLiftActivity">
    <RelativeLayout
        style="@style/head">
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/wode_return"
            style="@style/paddinglift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerInParent="true"
            android:text="@string/sharelift"
            android:textColor="@color/colorfocuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/enptyviewbackground"
        android:layout_width="match_parent"
        android:layout_height="37dp">
        <LinearLayout
            android:background="@drawable/ricular_search"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="26dp">
            <ImageView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center"
                android:src="@drawable/search_huise"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14" />
            <EditText
                android:layout_gravity="center_vertical"
                android:hint="搜索我的分享"
                android:background="@null"
                android:textColorHint="#e7e7e7"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <View
        android:background="@color/enptyviewbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
