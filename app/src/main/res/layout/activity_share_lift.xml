<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/enptyviewbackground"
    android:orientation="vertical"
    tools:context="com.xbdl.xinushop.activity.mine.ShareLiftActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        style="@style/head">
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/wode_return"
            style="@style/paddinglift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_centerInParent="true"

            android:textColor="@color/colorfocuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/enptyviewbackground"
        android:layout_width="match_parent"
        android:layout_height="37dp">
        <LinearLayout
            android:background="@drawable/ricular_search"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="26dp">
            <ImageView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center"
                android:src="@drawable/search_huise"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14" />
            <EditText
                android:id="@+id/et_search"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:textColorHint="#e7e7e7"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />

    </LinearLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/prossbar"/>
</FrameLayout>
