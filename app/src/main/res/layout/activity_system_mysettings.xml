<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.xbdl.xinushop.activity.mine.SystemSettingsActivity">
    <RelativeLayout
       style="@style/head">
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/wode_return"
            style="@style/paddinglift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerInParent="true"
            android:text="@string/systemsetting"
            android:textColor="@color/colorfocuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <View
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <View
        android:background="#f6f6f6"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <RelativeLayout
        android:id="@+id/system_personal_Data"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="个人信息"
           style="@style/systemtext" />
        <ImageView
            android:src="@drawable/back"
            style="@style/systeimg" />
    </RelativeLayout>
    <include layout="@layout/layout_line"/>
    <RelativeLayout
        android:id="@+id/rl_change_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="更改绑定手机号"
            style="@style/systemtext" />
        <ImageView
            android:src="@drawable/back"
            style="@style/systeimg" />
    </RelativeLayout>
    <include layout="@layout/layout_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="修改密码"
            style="@style/systemtext" />
        <ImageView
            android:src="@drawable/back"
            style="@style/systeimg" />
    </RelativeLayout>
    <View
        android:background="#f6f6f6"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <TextView
                        android:text="仅WiFi环境下观看视频和直播"
                        style="@style/systemtext" />
                    <CheckBox
                        android:id="@+id/cb_wifi_network"
                        android:background="@drawable/system_select"
                        android:button="@null"
                        android:checked="true"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </RelativeLayout>
                <include layout="@layout/layout_line"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <TextView
                        android:text="数据和WiFi环境下观看视频和直播"
                        style="@style/systemtext" />
                    <CheckBox
                        android:id="@+id/cb_mobile_network"
                        android:button="@null"
                        android:background="@drawable/system_select"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </RelativeLayout>



    <View
        android:background="#f6f6f6"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <RelativeLayout
        android:id="@+id/my_to_promote"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="我要推广"
            style="@style/systemtext" />
        <ImageView
            android:src="@drawable/back"
            style="@style/systeimg" />
    </RelativeLayout>
    <include layout="@layout/layout_line"/>
    <RelativeLayout
        android:id="@+id/rl_push_msg"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="消息推送"
            style="@style/systemtext" />
        <ImageView
            android:src="@drawable/back"
            style="@style/systeimg" />
    </RelativeLayout>
    <include layout="@layout/layout_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="意见反馈"
            style="@style/systemtext" />
        <ImageView
            android:src="@drawable/back"
            style="@style/systeimg" />
    </RelativeLayout>
    <include layout="@layout/layout_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="推荐给好友"
            style="@style/systemtext" />
        <ImageView
            android:src="@drawable/back"
            style="@style/systeimg" />
    </RelativeLayout>
    <include layout="@layout/layout_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="清理缓存"
            style="@style/systemtext" />
        <ImageView
            android:src="@drawable/back"
            style="@style/systeimg" />
    </RelativeLayout>
    <include layout="@layout/layout_line"/>
    <RelativeLayout
        android:id="@+id/rl_user_protocol"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="版权说明"
            style="@style/systemtext" />
        <ImageView
            android:src="@drawable/back"
            style="@style/systeimg" />
    </RelativeLayout>
    <include layout="@layout/layout_line"/>
    <RelativeLayout
        android:id="@+id/rl_about_us"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="关于我们"
            style="@style/systemtext" />
        <ImageView
            android:src="@drawable/back"
            style="@style/systeimg" />
    </RelativeLayout>
            <View
                android:background="#f6f6f6"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:textColor="#333333"
                    android:text="退出登录"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="#f6f6f6"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

    </LinearLayout>
</ScrollView>
</LinearLayout>
