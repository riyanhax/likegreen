<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.VideoReleaseActivity">
        <RelativeLayout
            style="@style/head">
            <ImageView

                android:layout_centerVertical="true"
                android:src="@drawable/wode_return"
                style="@style/paddinglift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/iv_return"
                android:orientation="vertical"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_48"/>
            <TextView
                android:textSize="@dimen/sp_15"
                android:layout_centerInParent="true"
                android:text="@string/release"
                android:textColor="@color/colorfocuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/enptyviewbackground"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"/>
        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_video_title"
                    android:background="@null"
                    android:gravity="top"
                    android:textColor="@color/actionbar_sel_color"
                    android:textColorHint="#cccccc"
                    android:hint="说点什么吧..."
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    />
                <TextView
                    android:id="@+id/text_music"
                    android:text="你选取的音乐是："
                    android:textColor="#808080"
                    android:layout_below="@id/et_video_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_music_title"
                    android:layout_below="@id/et_music_title"
                    android:background="@null"
                    android:gravity="top"
                    android:textColor="@color/actionbar_sel_color"
                    android:textColorHint="#cccccc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_select_video"
                android:scaleType="fitXY"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_width="104dp"
                android:layout_height="158dp" />
        </RelativeLayout>
    <View
        android:background="@color/enptyviewbackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textSize="14sp"
            android:textColor="#808080"
            android:text="@string/videotype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
       <RadioGroup
           android:id="@+id/rg_video_type"
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <RadioButton
               android:id="@+id/rb_putongvideo"
               android:button="@null"
               android:checked="true"
               android:drawablePadding="@dimen/dp_5"
               android:drawableLeft="@drawable/bt_video_type"
               android:textColor="#808080"
               android:text="@string/putongshortvideo"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <RadioButton
               android:id="@+id/rb_advertvideo"
               android:layout_marginLeft="@dimen/dp_15"
               android:button="@null"
               android:drawablePadding="@dimen/dp_5"
               android:drawableLeft="@drawable/bt_video_type"
               android:textColor="#808080"
               android:text="@string/advertvideo"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RadioGroup>
    </LinearLayout>
    <RelativeLayout
        android:background="@color/enptyviewbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_nextstep_btn"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/login_btn_bg"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30">
        <TextView
            android:layout_centerInParent="true"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="@string/nextstep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>