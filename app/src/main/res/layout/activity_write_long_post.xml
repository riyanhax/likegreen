<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.WriteLongPostActivity">
    <RelativeLayout
        style="@style/head">
        <ImageView
            android:id="@+id/iv_return"
            android:layout_centerVertical="true"
            android:src="@drawable/wode_return"
            style="@style/paddinglift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerInParent="true"
            android:text="@string/longpost"
            android:textColor="@color/colorfocuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_longpost_release"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="#afafaf"
            android:textSize="@dimen/sp_13"
            android:text="发布"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/enptyviewbackground"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42">
        <EditText
            android:background="@null"
            android:layout_centerVertical="true"
            android:textColorHint="#4d4d4d"
            android:hint="请输入标题"
            android:textColor="#4d4d4d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@drawable/shape_line_dash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <EditText
            android:background="@null"
            android:gravity="top"
            android:textColorHint="#cccccc"
            android:hint="请输入内容"
            android:textColor="#4d4d4d"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25">
    <LinearLayout
        android:id="@+id/ll_longpost_photo"
        android:layout_alignParentRight="true"
        android:background="@drawable/longpost_ed_bg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_25">
        <ImageView
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_gravity="center_vertical"
            android:src="@drawable/picture"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_10" />
        <TextView
            android:paddingRight="@dimen/dp_6"
            android:background="@null"
            android:layout_marginLeft="@dimen/dp_6"
            android:textColor="#b3b3b3"
            android:textSize="@dimen/sp_14"
            android:gravity="center_vertical"
            android:text="@string/longpostpictrue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
        <LinearLayout
            android:background="@drawable/longpost_ed_bg"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25">
            <ImageView
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_gravity="center_vertical"
                android:src="@drawable/weizhi"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_12" />
            <TextView
                android:id="@+id/tv_longpost_location"
                android:gravity="center"
                android:paddingRight="@dimen/dp_7"
                android:layout_marginLeft="@dimen/dp_3"
                android:textColor="#b3b3b3"
                android:textSize="@dimen/sp_14"
                android:text="你在哪里?"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>
    <com.xbdl.xinushop.view.MultiImageView
        android:id="@+id/iv_longpost_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>