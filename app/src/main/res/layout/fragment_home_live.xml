<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/render_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.netease.neliveplayer.playerkit.sdk.view.AdvanceSingleTextureView
        android:id="@+id/live_texture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
         />
    </FrameLayout>
  <LinearLayout
        android:layout_above="@id/ll_live_heng"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_13"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/home_live_cirular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/xilv"
                android:layout_width="@dimen/dp_49"
                android:layout_height="@dimen/dp_49" />
            <ImageView
                android:id="@+id/iv_live_head_add"
                android:src="@drawable/attention"
                android:layout_marginTop="35dp"
                android:layout_centerHorizontal="true"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/tv_live_username"
                android:textColor="@color/white"
                android:layout_marginTop="3dp"
                android:layout_below="@id/iv_live_head_add"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/sp_9"
                android:text="biubiuh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="@dimen/dp_6"
                android:layout_below="@id/tv_live_username"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/heart_zhibodianzan"
                    android:layout_width="@dimen/dp_21"
                    android:layout_height="@dimen/dp_18" />
                <TextView
                    android:paddingBottom="@dimen/dp_6"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="@dimen/sp_8"
                    android:text="15w"
                    android:textColor="#040404"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:layout_marginTop="@dimen/dp_6"
            android:src="@drawable/shoppingcart_home"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36" />
        <com.github.jdsjlzx.recyclerview.LRecyclerView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="179dp"/>
    </LinearLayout>
    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/living_room_audience_say"
        android:layout_above="@id/ll_live_heng"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  <LinearLayout
        android:id="@+id/ll_live_heng"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_39">
        <EditText
            android:id="@+id/et_live_say"
            android:layout_marginLeft="20dp"
            android:textColorHint="#78ffffff"
            android:hint="   说点..."
            android:background="@drawable/home_live_edtext"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_marginLeft="11dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/livesharing"
            android:layout_width="33dp"
            android:layout_height="33dp" />
        <ImageView
            android:id="@+id/iv_live_gift"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/livegift"
            android:layout_width="33dp"
            android:layout_height="33dp" />
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/home_live_count"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_38">
        <TextView
            android:layout_gravity="center"
            android:textSize="7sp"
            android:textColor="#ffffff"
            android:text="在线"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_live_room_count"
                android:layout_gravity="center"
                android:textSize="9sp"
                android:textColor="#bbe417"
                android:text="1111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
