<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tl="http://schemas.android.com/tools">
 <com.flyco.tablayout.SlidingTabLayout
     android:layout_centerHorizontal="true"
     android:id="@+id/st_home_page"
     android:layout_width="match_parent"
     android:layout_height="20dp"
     android:background="#00000000"
     android:layout_marginTop="26dp"
     tl:tl_divider_color="#ffffff"
     tl:tl_divider_padding="8dp"
     tl:tl_divider_width="2dp"
     tl:tl_indicator_color="#000000"
     tl:tl_indicator_height="1.5dp"
     tl:tl_indicator_width_equal_title="true"
     tl:tl_tab_padding="16dp"
     tl:tl_tab_space_equal="true"
     tl:tl_textSelectColor="#ffffff"
     tl:tl_textUnselectColor="#e7e7e7"
     />

    <android.support.v4.view.ViewPager
        android:layout_below="@id/st_home_page"
        android:id="@+id/viewpager_home_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
