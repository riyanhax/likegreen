<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lluser"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivhead"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/xilvfriends"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="用户昵称"
        android:textColor="@color/black"
        android:textSize="@dimen/text2"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/usersign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="个性签名"
        android:textColor="#9f9f9f"
        android:textSize="@dimen/text5"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/userachive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="多肉 0 棵      关注 0 人"
        android:textColor="@color/black1"
        android:textSize="@dimen/text6"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        android:id="@+id/split"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/enptyviewbackground"
        android:visibility="gone"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvlog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/plantdiary"
                android:textColor="@color/black"
                android:textSize="@dimen/text4" />

            <View
                android:id="@+id/vline1"
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_below="@id/tvlog"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@color/colorfocuse" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvlife"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/sharelift"
                android:textColor="@color/cblack"
                android:textSize="@dimen/text4" />

            <View
                android:id="@+id/vline2"
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_below="@id/tvlife"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/enptyviewbackground" />
</LinearLayout>
