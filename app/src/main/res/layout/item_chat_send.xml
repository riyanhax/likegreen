<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_chat_send_time"
        android:textColor="#ffffff"
        android:textSize="@dimen/dp_8"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/chat_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:visibility="gone"
            android:layout_marginRight="5dp"
            android:background="@drawable/chat_background_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:id="@+id/ib_chat_send_word"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        </RelativeLayout>
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_chat_send_img"
            android:layout_marginRight="5dp"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_chat_send_head"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44" />
    </LinearLayout>
</LinearLayout>
