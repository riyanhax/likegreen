<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginRight="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_20"
    android:background="@drawable/bg_coupon">

    <FrameLayout
        android:id="@+id/vertical_line"
        android:layout_marginLeft="130dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:layout_marginLeft="-50dp"
            android:layout_marginRight="-50dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/vertical_line"
            android:layerType="software" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_cash"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_renmingbi"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:text="Â¥"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_coupon_cash"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            android:text="10.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_coupon_type"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/cashcoupon"
        android:textColor="@color/gray"
        android:layout_width="110dp"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_coupon_detail"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/vertical_line"
        android:text="@string/aliplay"
        android:layout_marginRight="@dimen/dp_20"
        android:textColor="@color/actionbar_sel_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:background="@drawable/bg_coupon_text"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30">
        <TextView
            android:id="@+id/tv_coupon_data"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="@string/aliplay"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_coupon_isuser"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="@string/aliplay"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
