<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_my_direct_headicon_item"
        android:src="@drawable/xilv_banbengengxin"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_my_direct_headicon_item"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_mydirect_username_item"
            android:text="喜绿账号"
            android:textColor="#333333"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_mydirect_word_item"
            android:text="喜绿账号"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_mydirect_date_item"
        android:padding="10dp"
        android:textColor="#999999"
        android:text="8.22"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
