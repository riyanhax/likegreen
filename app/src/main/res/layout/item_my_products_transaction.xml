<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="111dp">
        <ImageView
            android:id="@+id/iv_products_icon"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="96dp"
            android:layout_height="96dp" />
        <TextView
            android:id="@+id/tv_products_name"
            android:text="玫瑰花"
            android:textSize="15sp"
            android:textColor="#404040"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@id/iv_products_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_products_price"
            android:text="¥100"
            android:textSize="20sp"
            android:textColor="#ff1847"
            android:layout_below="@id/tv_products_name"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@id/iv_products_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/tv_products_price"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
