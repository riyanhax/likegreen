<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_head_icon"
            android:src="@drawable/xilvfriends"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50" />
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/civ_head_icon"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_username"
                android:text="园丁 叭叭叭"
                android:textColor="@color/actionbar_sel_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_day_focus"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="11sp"
                android:text="天数 3 |关注 2"
                android:textColor="@color/actionbar_sel_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_focus"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_8"
            android:layout_centerVertical="true"
            android:background="@drawable/my_focuse_together"
            android:textColor="@color/group_small_text_color"
            android:text="@string/focustogether"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/enptyviewbackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"/>

</LinearLayout>
