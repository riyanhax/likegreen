<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="@dimen/dp_12"
        android:layout_gravity="center_horizontal"
        android:text="原因"
        style="@style/saleafter"/>
    <RadioGroup
        android:id="@+id/rg_reason"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_1"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableRight="@drawable/checkbox_admsginput"
            android:button="@null"
            style="@style/saleafter"
            android:text="尺寸/不喜欢/效果不好"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"/>
        <include layout="@layout/layout_line"/>
        <RadioButton
            android:id="@+id/rb_2"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableRight="@drawable/checkbox_admsginput"
            android:button="@null"
            style="@style/saleafter"
            android:text="质量问题"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"/>
        <include layout="@layout/layout_line"/>
        <RadioButton
            android:id="@+id/rb_3"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableRight="@drawable/checkbox_admsginput"
            android:button="@null"
            style="@style/saleafter"
            android:text="材质与商品描述不符"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"/>
        <include layout="@layout/layout_line"/>
        <RadioButton
            android:id="@+id/rb_4"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableRight="@drawable/checkbox_admsginput"
            android:button="@null"
            style="@style/saleafter"
            android:text="尺寸/容量与商品描述不符"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"/>
        <include layout="@layout/layout_line"/>
        <RadioButton
            android:id="@+id/rb_5"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableRight="@drawable/checkbox_admsginput"
            android:button="@null"
            style="@style/saleafter"
            android:text="卖家发错货"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"/>
        <include layout="@layout/layout_line"/>
        <RadioButton
            android:id="@+id/rb_6"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableRight="@drawable/checkbox_admsginput"
            android:button="@null"
            style="@style/saleafter"
            android:text="其他"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"/>
        <include layout="@layout/layout_line"/>
    </RadioGroup>
    <TextView
        android:id="@+id/tv_colse"
        android:gravity="center"
        android:textSize="@dimen/sp_18"
        android:text="关闭"
        android:background="#bbe417"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</LinearLayout>
