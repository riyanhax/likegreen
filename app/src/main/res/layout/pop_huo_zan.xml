<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="65dp"
    android:layout_marginRight="65dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_70"
        android:background="@drawable/dialog_to_promote_circular"
        android:layout_width="466dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_dianzan_username"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:text="蔷薇qiangwei123"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_dianzanshu"
            android:layout_below="@id/tv_dianzan_username"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_centerHorizontal="true"
            android:text="蔷薇qiangwei123"
            android:textColor="#333333"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="12sp"
            android:gravity="center"
            android:text="@string/showoff"
            android:background="@drawable/login_btn_bg"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_below="@id/tv_dianzanshu"
            android:layout_centerHorizontal="true"
            android:layout_width="88dp"
            android:layout_height="@dimen/dp_24" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_huozanshu"
        android:src="@drawable/huozanshu"
        android:layout_centerHorizontal="true"
        android:layout_width="183dp"
        android:layout_height="90dp" />
    <ImageView
        android:layout_alignParentRight="true"

        android:layout_marginTop="@dimen/dp_30"
        android:src="@drawable/close_dianzan"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16" />

</RelativeLayout>
